@page
@model SweetShop.Pages.SignInModel
@{
    ViewData["Title"] = "SignIn";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/login.css">
    <title>Login Page</title>
</head>
<body>
    <div class="signin">
        <div class="row">
            <div class="col-6">
                <div class="card">
                    <div class="card-header">
                        <h5>SignIn</h5>
                    </div>
                    <div class="card-body">
                        <form asp-page-handler="Validate" method="post">
                            <div class="mb-3">
                                <label class="form-label">Email or Username</label>
                                <input type="text" class="form-control" asp-for="userl.EmailOrUsername"/>
                                <span asp-validation-for="userl.EmailOrUsername" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Password</label>
                                <input type="password" class="form-control" asp-for="userl.Password"/>
                                <span asp-validation-for="userl.Password" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <button type"submit" class="btn btn-primary">Login</button>
                            </div>
                            <div class="mb-3">
                                <p>Don't have an account? <a href="SignUp">Sign Up</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>